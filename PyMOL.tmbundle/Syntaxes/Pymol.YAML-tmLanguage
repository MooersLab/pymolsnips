  begin: ^(\s)*([a-zA-Z]+)\.
  beginCaptures:
    '2': {name: entity.other.inherited-class.pymol}
  end: ($|\()
  patterns:
    - include: '#constant_placeholder'
    - include: '#command'

- name: meta.standard.pymol
  begin: ^(\s)*
  end: ($|,)
  patterns:
