      - name: keyword.control.pymol
        match: \b(and|or|not|in|gap|aroundwithin|of|byres|bymolecule|byfragment|bysegment|byobject|bycellneighbor|neighbor|extend|from|import)\b
      - include: '#numbers'
      - name: meta.paren.pymol
        begin: \(
        end: \)
